{
  "name": "skillmirror",
  "version": "1.0.0",
  "description": "SkillMirror MERN Stack Application",
  "main": "server/src/server.js",
  "scripts": {
    "build": "npm install && cd server && npm install && cd ../client && npm install && npm run build",
    "start": "cd server && npm start",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "postinstall": "npm run install-server && npm run install-client"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "mongoose": "^7.0.0",
    "dotenv": "^16.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.20"
  }
}
